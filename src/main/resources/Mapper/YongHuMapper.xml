<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.znczLfyl.dao.YongHuMapper">
	<insert id="add" parameterType="com.znczLfyl.entity.YongHu">
		insert into yong_hu
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="yhm!=null">
				yhm,
			</if>
			<if test="mm!=null">
				mm,
			</if>
			<if test="zsxm!=null">
				zsxm,
			</if>
				cjsj,
				zt,
			<if test="js!=null">
				js,
			</if>
		</trim>
		values
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="yhm!=null">
				#{yhm},
			</if>
			<if test="mm!=null">
				#{mm},
			</if>
			<if test="zsxm!=null">
				#{zsxm},
			</if>
				now(),
				0,
			<if test="js!=null">
				#{js},
			</if>
		</trim>
	</insert>
	<select id="getYongHu" resultType="com.znczLfyl.entity.YongHu">
		select * from yong_hu where yhm=#{yhm} and mm=#{mm}
	</select>
	<select id="queryForInt" resultType="java.lang.Integer">
		select count(*) from yong_hu where yhm!='admin'
		<if test="yhm!=''&amp;yhm!=null">
			and yhm like CONCAT('%',#{yhm},'%')
		</if>
	</select>
	<select id="queryList" resultType="com.znczLfyl.entity.YongHu">
		select * from yong_hu where yhm!='admin'
		<if test="yhm!=''&amp;yhm!=null">
			and yhm like CONCAT('%',#{yhm},'%')
		</if>
		order by cjsj
		limit #{rowNum},#{rows}
	</select>
	<select id="selectById" resultType="com.znczLfyl.entity.YongHu">
		select * from yong_hu where id=#{id}
	</select>
</mapper>